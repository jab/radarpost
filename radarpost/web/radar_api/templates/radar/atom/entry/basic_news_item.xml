{% load radar_feed %}
<entry>
    {% block entry_body %}
    <id>{{message.id}}</id>
    <title type="html">
        <![CDATA[{{message.title}}]]>
    </title>
    <updated>{{ message.timestamp|rfc3339 }}</updated>
    
    <link rel="alternate" href="{{message.link}}" />
    
    <author>
        <name>{{ message.author }}</name>
    </author>

    <content type="html">
        <![CDATA[{{ message.content }}]]>    
    </content>
    {% endblock %}
</entry>